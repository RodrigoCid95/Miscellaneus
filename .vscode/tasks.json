{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build: App",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/app",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "production,desktop",
        "-gcflags",
        "all=-N -l",
        "-ldflags",
        "-H=windowsgui",
        "-o",
        "build/bin/miscellaneous.exe"
      ]
    },
    {
      "label": "Build: App dev",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/app",
        "env": {
          "CGO_ENABLED": "1"
        }
      },
      "osx": {
        "options": {
          "env": {
            "CGO_CFLAGS": "-mmacosx-version-min=10.13",
            "CGO_LDFLAGS": "-framework UniformTypeIdentifiers -mmacosx-version-min=10.13"
          }
        }
      },
      "windows": {
        "options": {
          "env": {
            "CGO_ENABLED": "0"
          }
        }
      },
      "command": "go",
      "args": [
        "build",
        "-tags",
        "dev",
        "-gcflags",
        "all=-N -l",
        "-o",
        "build/bin/miscellaneous.exe"
      ]
    },
    {
      "label": "Build server",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/server",
      },
      "command": "go",
      "args": [
        "build",
        "-o",
        "${workspaceFolder}/app/server.exe"
      ]
    },
    {
      "label": "Build: Server 2 App",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/server",
      },
      "command": "go",
      "args": [
        "build",
        "-o",
        "${workspaceFolder}/app/build/windows/installer/server.exe"
      ]
    },
    {
      "label": "Build: All",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/app",
      },
      "command": "wails",
      "args": [
        "build",
        "-nsis"
      ],
      "dependsOn": [
        "Build: Server 2 App"
      ]
    },
    {
      "label": "Dev: Client",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "command": "npm",
      "args": [
        "run",
        "dev:server"
      ]
    },
  ]
}